mixin alone-step(counter, singlyTitle, singlyDescr, serviceTitle, serviceDescr)
	+e.item.col-12.col-xl-10.swiper-slide
		+b.step
			+e.counter= counter
			+e.singly
				+e.singly-title!= singlyTitle
				+e.singly-descr!= singlyDescr
			+e.service
				+e.service-title!= serviceTitle
				+e.service-descr!= serviceDescr
				+e.checked


